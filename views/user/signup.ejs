<% block('localStyles', '    <link rel="stylesheet" href="/public/user/signup.css">') -%>

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form id="signupForm" method="post" action="create">
            <h2>S'enregistrer</h2>
            <hr>
            <% if(flash && flash.err) { %>
                <ul class="alert alert-danger">
                <% Object.keys(flash.err).forEach(function(error) { %>
                    <li><%- JSON.stringify(flash.err[error]) %></li>
                <% }) %>
                </ul>
            <% } %>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>
                        <input type="text" name="firstName" class="form-control input-lg" placeholder="Prénom" tabindex="1">
                        </label>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>
                        <input type="text" name="lastName" class="form-control input-lg" placeholder="Nom" tabindex="2">
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>
                        <input type="email" name="email" class="form-control input-lg" placeholder="Email" tabindex="3">
                        </label>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>
                        <input type="text" name="username" class="form-control input-lg" placeholder="Nom d'utilisateur" tabindex="4">
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>
                        <input type="password" class="form-control input-lg" name="password" placeholder="Mot de passe" tabindex="5">
                        </label>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>
                        <input type="password" class="form-control input-lg" name="passwordConfirmation" placeholder="Confirmation" tabindex="6">
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4 col-sm-3 col-md-3">
                    <span class="button-checkbox">
                        <button type="button" class="btn" data-color="info" tabindex="7">J'accepte</button>
                        <input type="checkbox" name="t_and_c" id="t_and_c"
                        class="hidden">
                    </span>
                </div>
                <div class="col-xs-8 col-sm-9 col-md-9">
                    En cliquant sur  <strong class="label label-primary">J'accepte</strong>, vous vous engagez à respecter les <a href="#" data-toggle="modal" data-target="#t_and_c_m">conditions d'utilisations</a> de l'application web, y compris l'utilisation des cookies
                </div>
            </div>
            
            <hr>
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <button type="submit" class="btn btn-primary btn-block btn-lg" tabindex="7">S'enregistrer</button>
                </div>
            </div>
            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        </form>
    </div>
</div>
